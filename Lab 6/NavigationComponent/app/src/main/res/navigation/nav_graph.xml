<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.navigationcomponent1.FirstFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <argument
            android:name="message"
            android:defaultValue="kku"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="number"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_firstFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.navigationcomponent1.SecondFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_secondFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
        <argument
            android:name="message"
            android:defaultValue="kku2"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="number"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.navigationcomponent1.ThirdFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_third" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.navigationcomponent1.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />
</navigation>